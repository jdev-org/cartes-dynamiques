<?xml version="1.0" encoding="UTF-8"?>
<config>
	<application
			title="Travaux sur le réseau d'eau"
			id="travaux_eau"
			logo="apps/commons/theme_edp/logo_edp_white.png"	
			style="apps/commons/theme_edp/theme_edp.css"
			favicon="apps/commons/theme_edp/favicon.ico"	
			help="apps/edp_arret_eau/templates/home.html"
			home="https://www.eaudeparis.fr/"
			lang="fr"
			langfile="apps/edp_arret_eau/custommviewer.i18n.json"
			showhelp="false"
			titlehelp="LES CHIFFRES"
			iconhelp="question"
			exportpng="true"
			measuretools="true"
			stats="false"
			statsurl=""
			coordinates="false"
			togglealllayersfromtheme="true"
			templaterightinfopanel="brut"
	/>
	<mapoptions	maxzoom="22" projection="EPSG:3857"	center="260000,6251423"	zoom="13"/>

	<baselayers style="gallery">
		<baselayer
				type="WMTS"
				id="ign_plan"
				label="Plan IGN"
				title="Plan IGN"
				thumbgallery="apps/commons/img/basemap/ign_plan_v2.png"
				url="https://wxs.ign.fr/decouverte/geoportail/wmts?"
				layers="GEOGRAPHICALGRIDSYSTEMS.PLANIGNV2"
				fromcapacity="false"
				format="image/png"
				attribution="Données cartographiques :©IGN"
				style="normal"
				styleurl=""
				matrixset="PM"
				visible="false"
		/>
		<baselayer
				type="WMTS"
				id="ign_orthophoto"
				label="Photos aériennes IGN"
				title="Photos aériennes IGN"
				thumbgallery="apps/commons/img/basemap/ign_orthophoto.png"
				url="https://wxs.ign.fr/decouverte/geoportail/wmts?"
				layers="ORTHOIMAGERY.ORTHOPHOTOS"
				fromcapacity="false"
				format="image/jpeg"
				attribution="Données cartographiques :©IGN"
				style="normal"
				matrixset="PM"
				visible="false"
		/>
		<baselayer  type="WMS" id="osm" label="OpenStreetMap" title="OSM monochrome" thumbgallery="apps/commons/img/basemap/osm_grey.png"
            url="https://osm.geo2france.fr:443/mapcache/" layers="grey" format="image/png" visible="true"
            attribution="Données : les contributeurs d'&lt;a href='https://www.openstreetmap.org/' target='_blank'>OpenStreetMap &lt;/a>,  &lt;a href='https://www.openstreetmap.org/copyright' target='_blank'>ODbL &lt;/a>" />
		
	</baselayers>

	<olscompletion url="https://api-adresse.data.gouv.fr/search/?limit=5&amp;lon=2.347&amp;lat=48.857&amp;citycode=75056" type="ban" attribution="API adresse.data.gouv.fr" />
	<searchparameters
			banmarker="true"
			bbox="false"
			localities="true"
			features="false"
			inputlabel="Recherche d'adresse"
			closeafterclick="true"
			querymaponclick="true"/>

	<extensions>
		<extension type="component" id="btnGeoloc" path="apps/commons/addons"/>
		<extension type="component" id="offCanvas" path="apps/commons/addons"/>
        <extension type="component" id="print" path="apps/commons/addons"/>
		<extension type="component" id="homeBtnTools" path="apps/commons/addons"/>
		<extension type="component" id="modalInfos" path="apps/commons/addons"/>
	</extensions>
	
	<themes mini="true" legendmini="false">
		<theme name="Travaux" collapsed="true" id="edp_arret_eau_recherche_test" icon="fas fa-tint">
			<layer
					id="edp_ep"
					name="Travaux"
					url="apps/edp_arret_eau/addons/customlayers/edp_ep.js"
					scalemin="0"
					scalemax="1000000"
					dynamiclegend="false"
					visible="true"
					exclusive="true"
					tiled="false"
					opacity="1"
					legendurl="apps/edp_arret_eau/img/legende.png"
					filter="nature_res='EP'"
					toplayer="false"
					expanded="true"
					showintoc="true"
					queryable="true"
					infoformat="application/vnd.ogc.gml"
					infohighlight ="false"
					customcontrol="true"
					customcontrolpath="apps/edp_arret_eau/addons/customcontrol"
					type="customlayer"
					jsonfields="arrets"
			>
				<!--/fields="ID,NOM_COM,INSEE_COM,STATUT"
                    aliases="Nom,Numéro INSEE,Statut"-->
				<template url="apps/edp_arret_eau/templates/arret_eau_wms.mst"></template>
			</layer>
			<layer
					id="edp:arrondissement"
					name="Arrondissements"
					url="https://{{url_data_edp}}/geoserver/edp/wms"
					scalemin ="0"
					scalemax="1000000"
					dynamiclegend ="false"
					visible="true"
					exclusive="false"
					tiled="false"
					opacity="1"
					legendurl = ""
					filter=""
					toplayer="false"
					expanded="false"
					showintoc="false"
					queryable="false"
					infoformat="application/vnd.ogc.gml"
					infohighlight ="false"
			>
			</layer>
		</theme>
	</themes>	
</config>
