<?xml version="1.0" encoding="UTF-8"?>
<config>
    <application
        title="Où boire de l’eau de Paris ?"
        mouseposition="false"
        logo="apps/commons/theme_edp/logo_edp_white.png"	
		style="apps/commons/theme_edp/theme_edp.css"
		favicon="apps/commons/theme_edp/favicon.ico"
        measuretools="false"
        exportpng="true"
        togglealllayersfromtheme="true"
    />
    <mapoptions
        maxzoom="18"
        projection="EPSG:3857"
        center="260841.36, 6251306.81"
        zoom="13"
    />

    <baselayers style="gallery">
        <baselayer
            type="OSM"
            id="osm1"
            label="OpenStreetMap"
            title="OpenStreetMap"
            thumbgallery="img/basemap/osm.png"
            url="https://{a-c}.tile.openstreetmap.org/{z}/{x}/{y}.png"
            attribution="Données : les contributeurs d'&lt;a href='http://www.openstreetmap.org/' target='_blank'>OpenStreetMap &lt;/a>,  &lt;a href='http://www.openstreetmap.org/copyright' target='_blank'>ODbL &lt;/a>"
            visible="false"
        />
        <baselayer
            type="OSM"
            id="stamen2"
            label="Watercolor"
            title="Stamen Design"
            thumbgallery="apps/fontaines/img/watercolor.jpg"
            url="http://{a-c}.tile.stamen.com/watercolor/{z}/{x}/{y}.jpg"
            maxzoom="20"
            visible="false"
            attribution="Map tiles by  &lt;a href='http://stamen.com/'>Stamen Design &lt;/a>, under  &lt;a href='http://creativecommons.org/licenses/by/3.0/'>CC BY 3.0 &lt;/a>"
        />
        <baselayer
            type="OSM"
            id="stamen1"
            label="Toner-lite"
            title="Stamen Design"
            thumbgallery="apps/fontaines/img/toner-lite.png"
            url="http://{a-d}.tile.stamen.com/toner-lite/{z}/{x}/{y}.png" maxzoom="20" visible="false" attribution="Map tiles by  &lt;a href='http://stamen.com/'>Stamen Design &lt;/a>, under  &lt;a href='http://creativecommons.org/licenses/by/3.0/'>CC BY 3.0 &lt;/a>"
        />
        <baselayer
            type="OSM"
            id="darkmatter"
            label="Dark Matter"
            title="CartoDb"
            thumbgallery="img/basemap/darkmatter.png"
            url="https://{a-c}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png"
            maxzoom="20"
            visible="false"
            attribution="Map tiles by  &lt;a href='http://cartodb.com/attributions'>CartoDb &lt;/a>, under  &lt;a href='http://creativecommons.org/licenses/by/3.0/'>CC BY 3.0 &lt;/a>"
        />
        <baselayer
            type="OSM"
            id="positron"
            label="Positron" title="CartoDb" thumbgallery="img/basemap/positron.png" url="https://{a-c}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"
            maxzoom="20"
            visible="true"
            attribution="Map tiles by  &lt;a href='http://cartodb.com/attributions'>CartoDb &lt;/a>, under  &lt;a href='http://creativecommons.org/licenses/by/3.0/'>CC BY 3.0 &lt;/a>"
        />
    </baselayers>
    <olscompletion
        url="https://api-adresse.data.gouv.fr/search/"
        type="ban"
        attribution="API adresse.data.gouv.fr"
    />
    <searchparameters bbox="false" localities="true" features="false"/>

    <themes mini="true" legendmini="false">
        <theme name="Fontaines" collapsed="true" id="eaudeparis" icon="fas fa-tint">
            <layer
                id="fontaines"
                name="Fontaines"
                url="https://edp-geoserver-prod.atolcd.com/geoserver/fontaines/wms"
                legendurl="apps/fontaines/img/legende_v4.png"
                attributefilter="true"
                attributefield="type_objet_lib"
                attributevalues="Fontaine des bois parcs et jardins,Fontaine totem,Fontaine borne,Fontaine arceau,Fontaine wallace,Fontaine Millénaire,Fontaine à l'albien,Fontaine poing d'eau,Fontaine à eau pétillante"
                queryable="true"
                visible="true"
                attribution="Eau de Paris"
                infoformat="application/vnd.ogc.gml">
                <template url="apps/fontaines/templates/fontaines-wms.mst"></template>
            </layer>
            <layer
                id="edp:commerce"
                name="Commerces"
                url="https://edp-geoserver-prod.atolcd.com/geoserver/fontaines/wms"
                visible="true"
                tiled="false"
                legendurl ="apps/fontaines/img/legende_gel_vf.png"
                filter=""
                toplayer="false"
                queryable="true"
                infoformat="application/vnd.ogc.gml"
                attribution="Eau de Paris"            >
                <template url="apps/fontaines/templates/fontaines-commerces-wms.mst"></template>
            </layer>
        </theme>
    </themes>
    <extensions>
    </extensions>
</config>
