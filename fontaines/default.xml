<?xml version="1.0" encoding="UTF-8"?>
<config>
    <application
        title="Où boire de l’eau de Paris ?"
        mouseposition="false"
        logo="apps/commons/theme_edp/logo_edp_white.png"	
		style="apps/commons/theme_edp/theme_edp.css"
		favicon="apps/commons/theme_edp/favicon.ico"
        help="apps/fontaines/templates/home.html?1"
        showhelp="true"	
        home="https://www.eaudeparis.fr/"
        measuretools="false"
        titlehelp="A propos"
        exportpng="true"
        togglealllayersfromtheme="true"
        templaterightinfopanel="brut"
        geoloc="true"
    />
    <mapoptions
			maxzoom="22"
			projection="EPSG:3857"
			center="261185, 6248344.88"
			zoom="12"
	/>

    <baselayers style="gallery">
        <baselayer
				type="WMTS"
				id="ign_plan"
				label="Plan IGN"
				title="Plan IGN"
				thumbgallery="apps/fontaines_wallace/img/basemap/ign_plan_v2.png"
				url="https://wxs.ign.fr/decouverte/geoportail/wmts?"
				layers="GEOGRAPHICALGRIDSYSTEMS.PLANIGNV2"
				fromcapacity="false"
				format="image/png"
				attribution="Données cartographiques :©IGN"
				style="normal"
				matrixset="PM"
				visible="false"
		/>
         <baselayer type="vector-tms"
                owsoptions=""
                id="plan_ign_nb"
                label="Plan IGN - Nuance de gris"
                title="Plan IGN - Nuance de gris"
                thumbgallery=""
                url="https://wxs.ign.fr/essentiels/geoportail/tms/1.0.0/PLAN.IGN/{z}/{x}/{y}.pbf"
                layers="PLAN.IGN"
                visible="false"
                attribution="IGN"
                style="plan_ign"
                styleurl="https://wxs.ign.fr/static/vectorTiles/styles/PLAN.IGN/essentiels/gris.json"
        />
        <baselayer
				type="WMTS"
				id="ign_orthophoto"
				label="Photos aériennes IGN"
				title="Photos aériennes IGN"
				thumbgallery="apps/fontaines_wallace/img/basemap/ign_orthophoto.png"
				url="https://wxs.ign.fr/decouverte/geoportail/wmts?"
				layers="ORTHOIMAGERY.ORTHOPHOTOS"
				fromcapacity="false"
				format="image/jpeg"
				attribution="Données cartographiques :©IGN"
				style="normal"
				matrixset="PM"
				visible="false"
		/>
        <baselayer
            type="OSM"
            id="stamen1"
            label="Toner-lite"
            title="Stamen Design"
            thumbgallery="apps/fontaines/img/toner-lite.png"
            url="http://{a-d}.tile.stamen.com/toner-lite/{z}/{x}/{y}.png" maxzoom="20" visible="false" attribution="Map tiles by  &lt;a href='http://stamen.com/'>Stamen Design &lt;/a>, under  &lt;a href='http://creativecommons.org/licenses/by/3.0/'>CC BY 3.0 &lt;/a>"
        />
        <baselayer  type="OSM" id="positron" label="Positron" title="Carto" thumbgallery="img/basemap/positron.png" 
            url="http://{a-c}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png" maxzoom="20" 
            visible="true" attribution="Map tiles by  &lt;a href='https://carto.com/attributions' target='_blank'>Carto &lt;/a>, under  &lt;a href='https://creativecommons.org/licenses/by/3.0/' target='_blank'>CC BY 3.0 &lt;/a>" />
    </baselayers>
    <olscompletion
        url="https://api-adresse.data.gouv.fr/search/"
        type="ban"
        attribution="API adresse.data.gouv.fr"
    />
    <searchparameters bbox="false" localities="true" features="false"/>
    <extensions>
		<extension type="component" id="noSidebar" path="apps/commons/addons"/>
        <extension type="component" id="btnGeoloc" path="apps/commons/addons"/>
	</extensions>

    <themes mini="true" legendmini="false">
        <theme name="Fontaines" collapsed="true" id="eaudeparis" icon="fas fa-tint">
